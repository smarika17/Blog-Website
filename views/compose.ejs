<h1>Compose</h1>


<form action="/compose" method="post">
 
    <div class="mb-3">
        <label>Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="mb-3">
        <label>Post</label>
        <textarea class="form-control" name="postBody"></textarea>
    </div>
    <button type="submit" name="postButton" class="btn btn-primary">
    Publish</button>        
</form>


